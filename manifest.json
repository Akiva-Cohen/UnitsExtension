{
    "manifest_version": 3,
    "name": "Units Replacer",
    "description": "Automatically convert units",
    "version": "0.0.1",

    "action" : {
        "default_title" : "settings"
    },
    "content_scripts" : [
        {
            "matches" : ["*://*/*"],
            "all_frams": "true",
            "js" : ["replacer.js"],
            "run_at" : "document_end"  
        }
    ],
    "permissions" : [
        "storage"
    ]
}